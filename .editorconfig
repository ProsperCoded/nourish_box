# Editor configuration, see http://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# JavaScript, TypeScript, JSX, TSX files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 80

# JSON files
[*.json]
indent_size = 2
max_line_length = 120

# CSS, SCSS, LESS files
[*.{css,scss,less}]
indent_size = 2
max_line_length = 80

# HTML files
[*.{html,htm}]
indent_size = 2
max_line_length = 80

# Markdown files
[*.md]
max_line_length = 100
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 80

# Configuration files
[*.{toml,ini}]
indent_size = 2
max_line_length = 80

# Package files (keep original formatting)
[package-lock.json]
indent_size = 2
max_line_length = off

# Lock files
[pnpm-lock.yaml]
indent_size = 2
max_line_length = off

# Git ignore and similar files
[*.{gitignore,gitattributes}]
indent_size = 2
max_line_length = off
